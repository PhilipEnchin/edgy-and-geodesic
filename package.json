{
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.11",
    "@types/sinon": "^17.0.3",
    "c8": "^9.1.0",
    "chai": "^5.1.0",
    "cspell": "^8.8.1",
    "deep-equal-in-any-order": "^2.0.6",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.2",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "sinon": "^17.0.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "check": "npm run spellcheck && npm run typecheck && npm run lint && npm run test -- --reporter progress",
    "check:dev": "nodemon -x npm run check",
    "lint": "eslint .",
    "lint:dev": "nodemon -x npm run lint",
    "spellcheck": "cspell \"**\" --no-progress --no-summary",
    "spellcheck:dev": "nodemon -x npm run spellcheck",
    "start": "nodemon .",
    "test": "c8 --include src/ mocha --recursive",
    "test:dev": "nodemon -x 'npm run test -- --reporter min'",
    "typecheck": "tsc"
  },
  "type": "module"
}
